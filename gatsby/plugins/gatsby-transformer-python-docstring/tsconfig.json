{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "module": "commonjs",
        "target": "es2015",
        "lib": ["es2015"],
        "noUnusedLocals": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "noEmit": false,
        "noEmitOnError": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": ["node"],
        "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}